<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'users/userinfo' ,user:current_user,book:@booknew%>
    </div>
    <div class="col-lg-9">
    <h2>Users</h2>
      <table class="table table-striped">
        <thead>
         <th>image</th>
         <th>name</th>
        </thead>
        <tbody>
         <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" ,size: '40x40'%></td>
          <td><%= user.name %></td>
          <td><%= link_to 'show', user_path(user) %></td>
        </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>