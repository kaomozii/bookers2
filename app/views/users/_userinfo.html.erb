
   <h2>Users info</h2>
    <div class="prof_image">
    	<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size:"100x100" %>
    </div>

     <table class = table>
      <tbody>
       <tr>
        <td>name</td>
        <td><%= user.name %></td>
       </tr>
       <tr>
        <td>introduction</td>
        <td><%= user.introduction %></td>
	   </tr>
	</tbody>
 	</table>
 	 	<div>
	       <%= link_to "edit", edit_user_path(user)%>
	    </div>

    <h2>New book</h2>
    <%= form_for(Book.new) do |f| %>
	    <h4>Title</h4>
	     <%= f.text_field :title %>
	    <h4>Opinion</h4>
	     <%= f.text_area :body %>
	     <div>
	     <%= f.submit 'Creat Book' %>
	     </div>
	<% end %>