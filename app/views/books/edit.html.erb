<div class="body-wrap">
 <div id="st-container" class="st-container">
  <div class="st-pusher">
   <div class="st-content">
    <div class="st-content-inner">
     <section class="slice slice-lg sct-color-1">
      <div class="container">
       <div class="row">
        <div class="col-md-4 col-md-offset-4">
         <div class="form-user style-1 rounded has-shadow-1">
          <div class="form-header text-center">
           <h2 class="form-header-title">Editing Book</h2>
          </div>
           <div class="form-body">

          <% if @book.errors.any? %>
    <% @book.errors.full_messages.each do |message| %>
     <p style="color: red;">error <%= message %></p>
    <% end %>
    <% end %>

            <%= form_for(@book) do |f| %>
    <div class="form-group has-icon">
        <label class="control-label sr-only" for="inputEmail">Title</label>
        <%= f.text_field :title, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>
    <div class="form-group has-icon">
        <label class="control-label sr-only" for="inputEmail">Opinion</label>
        <%= f.text_area :body, autofocus: true, class:"form-control", id:"inputEmail", placeholder:""%>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>
    <%= f.submit "Update Book", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>
    <%= link_to 'Show', book_path %>
    <%= link_to 'Back', books_path %>
           </div>
          </div>
         </div>
        </div>
       </div>
     </section>
    </div>
   </div>
  </div>
 </div>
</div>